@model List<Employee>

<div class="container">
    <a asp-action="Add" class="btn btn-success mb-2">Create New Employee</a>
    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">About</th>
                <th scope="col">Position</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Name @item.Surname</td>
                    <td>@item.About</td>
                    <td>@item.Position</td>
                    <td>
                        <img style="width:100px; height:100px;" src="~/Uploads/Employee/@item.ImageUrl">
                    </td>
                    <td>
                        <a type="button" class="btn btn-warning" asp-route-id="@item.Id" asp-action="Update">Update</a>
                    </td>
                    <td>

                        <a type="button" class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
</div>